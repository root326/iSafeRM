
storage:
   journal:
      enabled: true
      commitIntervalMs: {{ user_timeline_mongodb_journalCommitInterval|default(200) }}
   directoryPerDB: true
   syncPeriodSecs: {{ user_timeline_mongodb_syncPeriodSecs|default(60) }}
   engine: wiredTiger
   wiredTiger:
      engineConfig:
         cacheSizeGB: {{ user_timeline_mongodb_cacheSizeGB|default(2) }}
         journalCompressor: {{ user_timeline_mongodb_journalCompressor|default("snappy") }}
         directoryForIndexes: true
      collectionConfig:
         blockCompressor: {{ user_timeline_mongodb_blockCompressor|default("snappy") }}
      indexConfig:
         prefixCompression: true

processManagement:
  timeZoneInfo: /usr/share/zoneinfo

net:
   port: 27017
   maxIncomingConnections: {{ user_timeline_mongodb_maxIncomingConnections|default(200) }}
   compression:
      compressors: {{ user_timeline_mongodb_netCompressors|default("snappy") }}
   serviceExecutor: {{ user_timeline_mongodb_serviceExecutor|default("synchronous") }}


setParameter:

   connPoolMaxConnsPerHost: {{ user_timeline_mongodb_connPoolMaxConnsPerHost|default(200) }}
   connPoolMaxInUseConnsPerHost: {{ user_timeline_mongodb_connPoolMaxInUseConnsPerHost|default(200) }}
   globalConnPoolIdleTimeoutMinutes: 10
   maxNumActiveUserIndexBuilds: {{ user_timeline_mongodb_maxNumActiveUserIndexBuilds|default(3) }}
   maxIndexBuildMemoryUsageMegabytes: {{ user_timeline_mongodb_maxIndexBuildMemoryUsageMegabytes|default(200) }}
   tcmallocReleaseRate: {{ user_timeline_mongodb_tcmallocReleaseRate|default(1.0) }}
   diagnosticDataCollectionPeriodMillis: {{ user_timeline_mongodb_diagnosticDataCollectionPeriodMillis|default(1000) }}
   maxSessions: {{ user_timeline_mongodb_maxSessions|default(1000000) }}
   TransactionRecordMinimumLifetimeMinutes: {{ user_timeline_mongodb_TransactionRecordMinimumLifetimeMinutes|default(5) }}
   enableFlowControl: true
   flowControlTargetLagSeconds: {{ user_timeline_mongodb_flowControlTargetLagSeconds|default(10) }}
   flowControlWarnThresholdSeconds: 10
   initialSyncTransientErrorRetryPeriodSeconds: 86400
   oplogFetcherUsesExhaust: true

   oplogInitialFindMaxSeconds: {{ user_timeline_mongodb_oplogInitialFindMaxSeconds|default(60) }}
   replWriterThreadCount: {{ user_timeline_mongodb_replWriterThreadCount|default(16) }}
   replWriterMinThreadCount: 0
   wiredTigerConcurrentReadTransactions: {{ user_timeline_mongodb_wiredTigerConcurrentReadTransactions|default(128) }}
   wiredTigerConcurrentWriteTransactions: {{ user_timeline_mongodb_wiredTigerConcurrentWriteTransactions|default(128) }}
   maxTransactionLockRequestTimeoutMillis: {{ user_timeline_mongodb_maxTransactionLockRequestTimeoutMillis|default(10) }}
